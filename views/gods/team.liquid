{% layout "layout.liquid" %} 
{% block content %}

<h1>Team Page</h1>
<a href="/gods"><button>Return to Gods Page</button></a>

<div class = "all">
  {% for god in gods %}


  <div class="card-team" >
   <a id="team-pic" href="/gods/{{god._id}}"><img src="{{god.img}}" class="card-img-top" alt="..."></a>
   <h5 class="card-title1-team">{{god.name}}</h5>
    <div class="card-body">
      
     <h6>Damage Type: {{god.damageType}}</h6>
    <div class="buttons-team">
      <a href="/gods/{{god._id}}/edit" class="card-link"><button>Edit</button></a>
      <a href="/gods/{{god._id}}/removeTeam"><button>Remove from Team</button></a>

      
     
    </div>
  </div>
</div>
    {%endfor%}


   

    {% endblock %}